{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",               // ✅ Ensure this is set
    "outDir": "build",              // ✅ Required for Render to find compiled files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "src/types/express.d.ts"]
}